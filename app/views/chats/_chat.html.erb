  <% if current_user?(chat.user) %>
    <div class="balloon1-right" data-chat-id = <%= chat.id %>>
      <p><%= chat.message %></p>
      <!--    投稿が自分なら削除ボタン出現-->
        <%= link_to chat, method: :delete do %>
          <i class="bi bi-trash text-secondary"></i>
        <% end %>
    </div>
  <% else %>
    <div class="balloon1-left" data-chat-id = <%= chat.id %>>
      <p><%= chat.message %></p>
    </div>
  <% end %>