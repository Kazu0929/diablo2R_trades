<div class="card bg-secondary trades-contents">
  <div class="card-header text-left">
    <!--トレードタイプで背景色変更-->
    <% if trade.trade_type == "Buy" %>
      <span class="trade-icon bg-success"><%= trade.trade_type_i18n %></span>
    <% else %>
      <span class="trade-icon bg-danger"><%= trade.trade_type_i18n %></span>
    <% end %>
    <span class="trade-icon bg-dark"> <%= trade.mode_i18n %></span>
    <span class="trade-icon bg-dark"><%= trade.season_i18n %></span>
  </div>
  <div class="card-body text-left">
    <!--トレードタイプで順番を変更-->
    <% if trade.trade_type == "Buy" %>
      <h3 class="card-title">
        求）<%= trade.item_to_want %>
      </h3>
      <h3 class="card-title">
        出）<%= trade.item_to_offer %>
      </h3>
    <% else %>
      <h3 class="card-title">
        出）<%= trade.item_to_offer %>
      </h3>
      <h3 class="card-title">
        求）<%= trade.item_to_want %>
      </h3>
    <% end %>
    <p class="card-text"><%= trade.content %></p>
  </div>
  <div class="card-body text-left item-info">
    <span class="trade-icon bg-dark">
      プラットフォーム：
      <% trade.trade_platforms.each do |trade_platform| %>
<!--        各データにあったアイコンを表示-->
        <% case trade_platform.platform.name %>
        <% when 'PC' then %>
          <i class="bi bi-pc" title="PC"></i>
        <% when 'Switch' then %>
          <i class="bi bi-nintendo-switch" title="Switch"></i>
        <% when 'Playstation' then %>
          <i class="bi bi-playstation" title="Playstation"></i>
        <% else %>
          <i class="bi bi-xbox" title="Xbox"></i>
        <% end %>
      <% end %>
    </span>
  </div>
  <div class="card-footer text-left card-footer-contents">
    <span class="timestamp">
      <%= link_to trade.user.name, trade.user %>が<%= time_ago_in_words(trade.created_at) %>に投稿
      <%= link_to "DMする", chat_path(trade.user) %>
    </span>
    <% if current_user?(trade.user) %>
        <%= link_to "delete", trade, method: :delete,
                    data: { confirm: "本当に消しますか？" }, class: "delete-link" %>
    <% end %>
  </div>

</div>